{
  "openapi": "3.0.1",
  "info": {
    "title": "Registry",
    "version": "1.0"
  },
  "paths": {
    "/.well-known/register": {
      "post": {
        "tags": [
          "Register"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentCard"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentCard"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AgentCard"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/.well-known/agents.json": {
      "get": {
        "tags": [
          "Register"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/.well-known/deregister": {
      "post": {
        "tags": [
          "Register"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeregisterRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DeregisterRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DeregisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AgentAuthentication": {
        "required": [
          "schemes"
        ],
        "type": "object",
        "properties": {
          "schemes": {
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "credentials": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AgentCapabilities": {
        "type": "object",
        "properties": {
          "streaming": {
            "type": "boolean"
          },
          "pushNotifications": {
            "type": "boolean"
          },
          "stateTransitionHistory": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "AgentCard": {
        "required": [
          "capabilities",
          "defaultInputModes",
          "defaultOutputModes",
          "name",
          "skills",
          "url",
          "version"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "provider": {
            "$ref": "#/components/schemas/AgentProvider"
          },
          "version": {
            "minLength": 1,
            "type": "string"
          },
          "documentationUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "capabilities": {
            "$ref": "#/components/schemas/AgentCapabilities"
          },
          "authentication": {
            "$ref": "#/components/schemas/AgentAuthentication"
          },
          "defaultInputModes": {
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "defaultOutputModes": {
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "skills": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AgentSkill"
            }
          }
        },
        "additionalProperties": false
      },
      "AgentProvider": {
        "required": [
          "organization"
        ],
        "type": "object",
        "properties": {
          "organization": {
            "minLength": 1,
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AgentSkill": {
        "required": [
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "minLength": 1,
            "type": "string"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "inputModes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "outputModes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DeregisterRequest": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}